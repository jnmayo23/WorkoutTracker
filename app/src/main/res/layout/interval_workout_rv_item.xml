<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/intervalWorkoutItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="3dp"
            android:text="Interval Workout Name"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_sets_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="Sets: "
            android:textColor="@color/black"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/item_sets"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/item_sets_label"
            android:padding="3dp"
            android:text="sets"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_warm_up_time_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_sets_label"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="Warm Up Time (in seconds): "
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_warm_up_time"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_sets"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/item_warm_up_time_label"
            android:padding="3dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_high_intensity_time_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_warm_up_time_label"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="High Intensity Time (in seconds):"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_high_intensity_time"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_warm_up_time"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/item_high_intensity_time_label"
            android:padding="3dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_low_intensity_time_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_high_intensity_time_label"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="Low Intensity Time (in seconds):"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_low_intensity_time"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_high_intensity_time"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/item_low_intensity_time_label"
            android:padding="3dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_cool_down_time_label"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_low_intensity_time_label"
            android:layout_alignParentLeft="true"
            android:padding="3dp"
            android:text="Cool Down Time (in seconds):"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_cool_down_time"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_low_intensity_time"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/item_cool_down_time_label"
            android:padding="3dp"
            android:text="time"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>